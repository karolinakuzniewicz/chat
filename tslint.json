{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "jsx-boolean-value": false,
    "jsx-no-multiline-js": false,
    "interface-name": false,
    "member-ordering": [ false ],
    "quotemark": [
      true,
      "double",
      "jsx-double"
    ],
    "variable-name": [true,
      "allow-leading-underscore",
      "allow-pascal-case",
      "ban-keywords",
      "check-format"
    ]
  }
}
